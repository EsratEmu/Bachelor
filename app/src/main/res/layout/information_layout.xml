<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/information_image"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_centerVertical="true"
        android:src="@drawable/boy_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/information_image"
        android:layout_toLeftOf="@+id/information_action"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:layout_centerVertical="true"
        android:padding="@dimen/size_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loading"
            android:textSize="@dimen/text_14"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/information_sub_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loading"
            android:textSize="@dimen/text_8"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/information_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loading"
            android:textSize="@dimen/text_12"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/information_action"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_10"
        android:src="@drawable/ic_arrow_forward"
        android:visibility="gone"/>

</RelativeLayout>